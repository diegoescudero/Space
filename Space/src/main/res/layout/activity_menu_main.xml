<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:weightSum="100.0">

    <LinearLayout
        android:id="@+id/leftSwipe"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="15.0"
        android:orientation="horizontal"
        android:background="@drawable/space_metal"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="70.0"
        android:weightSum="100.0">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="30.0"
            android:textSize="58sp"
            android:gravity="center_horizontal"
            android:text="@string/app_name"/>

        <Button
            android:id="@+id/play"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="15.0"
            android:text="Play"/>

        <Button
            android:id="@+id/upgrades"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="15.0"
            android:text="Upgrades"/>

        <Button
            android:id="@+id/trophies"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="15.0"
            android:text="Trophies"/>

        <Button
            android:id="@+id/options"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="15.0"
            android:text="Options"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/rightSwipe"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="15.0"
        android:orientation="horizontal"
        android:background="@drawable/space_metal"/>

</LinearLayout>